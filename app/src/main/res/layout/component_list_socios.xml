<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/container_imagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/socio_img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="0"
            android:padding="5dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/ic_list_user_img" />

        <LinearLayout
            android:id="@+id/items_container"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/editTextText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="text"
                android:text="Nombre"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="text"
                android:text="Dni"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtFech_vencimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="text"
                android:text="Fecha de vencimiento"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="51dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_arrow_button"
            app:tint="#5500FF"
            android:contentDescription="User imagine"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>